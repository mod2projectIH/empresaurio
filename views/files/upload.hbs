<div class="container-fluid">
  <div class="d-flex flex-column justify-content-start align-items-top w-25 mb-5">
    <a href="/workers/{{worker.id}}" class="btn btn-success">Back</a>
  </div>
  <form action="/workers/{{worker.id}}/upload" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="type">Type</label>
      <input name="type" type="text" class="form-control {{#if error.type }}is-invalid{{/if}}" id="type"
        placeholder="Enter name" value="{{ worker.name }}">
      {{#if error.type}}
      <div class="invalid-feedback">
        {{error.type.message}}
      </div>
      {{/if}}
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <input name="description" type="text" class="form-control {{#if error.type }}is-invalid{{/if}}" id="description"
        placeholder="Enter description" value="{{ worker.name }}">
      {{#if error.type}}
      <div class="invalid-feedback">
        {{error.type.message}}
      </div>
      {{/if}}
    </div>
    <div class="form-group">
      <label for="file">Upload file</label>
      <input name="file" type="file" class="form-control-file {{#if error.file }}is-invalid{{/if}}" id="upload"
        placeholder="Upload file" value="{{ worker.file }}">
      {{#if error.file}}
      <div class="invalid-feedback">
        {{error.file.message}}
      </div>
      {{/if}}
    </div>
    <button type="submit" class="btn btn-primary mt-5 w-100">
      Upload
    </button>
  </form>
</div>