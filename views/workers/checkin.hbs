<form action="/workers/checkin" method="POST" class="mb-3" autocomplete="off">
  <div class="form-group">
    <label for="number">Number</label>
    <input name="number" type="number" class="form-control {{#if error.number }}is-invalid{{/if}}" id="number"
      placeholder="Enter name" value="{{ worker.number }}">

    {{#if error.number}}
    <div class="invalid-feedback">
      {{error.number}}
    </div>
    {{/if}}
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}" id="password"
      placeholder="password" value="{{ worker.password }}">

    {{#if error.password}}
    <div class="invalid-feedback">
      {{error.password}}
    </div>
    {{/if}}
  </div>

  <button type="submit" class="btn btn-primary">
    Check in
  </button>
</form>