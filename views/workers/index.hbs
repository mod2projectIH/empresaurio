<div class="container-fluid">
  <div class="container-fluid mb-5">
    <div class="card  mb-5">
      <div class="d-flex flex-column justify-content-start align-items-center">
        <img src="{{currentWorker.profilePic}}" alt="{{currentWorker.firstName}} {{currentWorker.lastName}} profile pic"
          class="card-img-left">
        <h5 class="card-title ">Welcome {{currentWorker.firstName}} {{currentWorker.lastName}}</h5>
      </div>

      {{!-- Buttons for breaks --}}
      {{#if currentWorker.break}}
      <div class="d-flex flex-column justify-content-end align-items-center">
        <div>
          <button type="submit" class="btn btn-danger" id="{{currentWorker.id}}">
            Press here to start your break
          </button>
        </div>
      </div>
      {{else}}
      <div class="d-flex flex-column justify-content-end align-items-center">
        <div>
          <button type="submit" class="btn btn-danger">
            Don't work
          </button>
        </div>
      </div>
      {{/if}}
      {{!-- A helper has been registered to enable if equals --}}
      {{#ifEquals currentWorker.currentState "Working"}}
      <div class="d-flex flex-column justify-content-end align-items-center">
        <p>You are logged in as <b>Worker</b>
        </p>
      </div>
      {{/ifEquals}}
    </div>
    <div class="mb-5">
      <a href="/workers/check" class="btn btn-warning w-100">Check In</a>
    </div>
    {{#if currentWorker.isHR}}
    <div>
      {{> controlPanel}}
    </div>
    <div><a href="/workers/new" class="btn btn-success">Create a new user</a></div>
    {{/if}}
  </div>
  <div class="d-flex flex-column justify-content-end align-items-center mt-5">
    <a href="/logout" class="btn btn-danger">Logout</a>
  </div>
</div>