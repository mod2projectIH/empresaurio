<div class="container-fluid mb-5">
  <div class="row">


    <div class="d-flex justify-content-center card w-50 mb-5 float-left">
      <div class="d-flex flex-column justify-content-start align-items-center">
        <img src="{{worker.profilePic}}" alt="{{worker.firstName}} {{worker.lastName}} profile pic"
          class="card-img-left w-75 justify-content-center rounded mt-3">
        <h5 class="card-title ">Welcome {{worker.firstName}} {{worker.lastName}}</h5>
      </div>
      {{!-- A helper has been registered to enable if equals --}}
      {{#ifEquals worker.currentState "Working"}}
      <div class="d-flex flex-column justify-content-end align-items-center">
        <p>You are logged in as <b>{{worker.role}}</b>
        </p>
      </div>
      {{/ifEquals}}
    </div>
    <div class="d-flex justify-content-center card w-50 mb-5 float-right">

      {{> uploadfiles}}

    </div>
  </div>
    <div class="mb-5">
      {{#if worker.isWorking }}
      <a href="/workers/check" class="btn btn-danger w-100">Check Out</a>
      {{else}}
      <a href="/workers/check" class="btn btn-warning w-100">Check In</a>        
      {{/if}}
      {{#if worker.isHR}}
      <a href="/workers" class="btn btn-info w-100">Full list of workers</a>     
      {{/if}}  
    </div>
    <div class="d-flex justify-content-center card w-100 mb-5">
    {{#ifEquals worker.role "Team leader"}}
    <div>
      {{> panelTeamLeader}}
    </div>
    {{/ifEquals}}    
    {{#if worker.isHR}}
    <div>
      {{> controlPanel}}
    </div>
    </div>
    <div><a href="/workers/new" class="btn btn-success">Create a new user</a></div>
    {{/if}}  
</div>
<div class="d-flex flex-column justify-content-end align-items-center mt-5">
  <a href="/logout" class="btn btn-danger">Logout</a>
</div>