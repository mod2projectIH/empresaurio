<div class="container-fluid">
  <div id="edit"></div>

  {{#each workdays}}
  <div class="d-flex flex-row w-100 card mb-1">
    <table class="table table-sm table-hover table-striped" id="control">
      <thead>
        <tr>
          <th scope="col">Start Time</th>
          <th scope="col">Number</th>
          <th scope="col">Last Name</th>
          <th scope="col">Work Team</th>
        </tr>
      </thead>


      <tbody>


        <tr id="row{{this.worker.id}}">
          <th scope="row">{{formatDate this.startTime}}</th>
          <td>{{this.worker.number}}</td>
          <td>{{this.worker.lastName}}</td>
          <td>{{this.worker.workTeam}}</td>
          <td>
            <a href="/workers/{{this.worker.id}}" class="btn btn-success">See
              details</a>
          </td>
          <td>
            <button class="btn btn-danger details" onclick="editDelete({{toString this.worker}})">Edit/delete

            </button>
          </td>
         

      </tbody>



    </table>
  </div>
<div id="{{this.worker.id}}">
  {{>progressBar}}
  </div>
  {{/each}}


</div>