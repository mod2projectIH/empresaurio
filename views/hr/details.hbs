<div class="container-fluid">
    <div class="d-flex flex-column justify-content-start align-items-top w-25 mb-5">
        <a href="/" class="btn btn-success">Back</a>
    </div>
    <div class="row my-2 mb-5">
        <div class="col-lg-8 order-lg-2">
            <ul class="nav nav-tabs">
            </ul>
            <div class="tab-content py-4">
                <div class="active" id="profile">
                    <img src="{{worker.profilePic}}" class="mx-auto img-fluid img-circle d-block w-25" alt="avatar">
                    <h5 class="mb-3">Worker Profile</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Team</h6>
                            <p>
                                {{worker.workTeam}} </p>
                            <h6>Email</h6>
                            <p><a href="{{worker.email}}">{{worker.email}}</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 order-lg-1 text-center" id="upload">



            {{> uploadfilesDetails}}
        </div>
    </div>
    <div class="col-md-12">
        <h5 class="mt-2"><span class="fa fa-file float-right"></span>Worker files</h5>
        {{> uploadedFiles}}
    </div>
</div>